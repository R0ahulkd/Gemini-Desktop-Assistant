{
  "manifest_version": 3,
  "name": "Gemini Desktop Assistant",
  "version": "1.0",
  "description": "Connects to your Python desktop assistant to provide AI help.",
  "permissions": [
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "launch_assistant": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Launch the Gemini Desktop Assistant."
    }
  }
}